{
  "$schema": "https://json.schemastore.org/tsconfig",
  // "ts-node": {
  //   // these options are overrides used only by ts-node
  //   // same as the --compilerOptions flag and the TS_NODE_COMPILER_OPTIONS environment variable
  //   "compilerOptions": {
  //     "module": "commonjs"
  //   }
  // },
  "compilerOptions": {
    "noErrorTruncation": true,
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./config/*"],
      "#/*": ["./cypress/*"],
      "next-seo.config": ["./next-seo.config.js"],
      "next-sitemap.config": ["./next-sitemap.config.js"],
      "next-i18next.config": ["./next-i18next.config.js"],
      "i18next.d": ["./i18next.d.ts"],
      "package.json": ["./package.json"],
      "vercel.json": ["./vercel.json"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs"
  ],
  "exclude": [
    "src/@gen/trpc",
    "src/@gen/lulu",
    "src/@gen/crud",
    "src/@__OLD__",
    "src/@__OLD__",
    "src/@__OLD__",
    "src/@__OLD__",
    "docs/prisma",
    "**/node_modules",
    "**/.*/",
    "cypress",
    "cypress.config.ts",
    "public/fallback-*.js",
    "public/workbox-*.js",
    "public/sw.js"
  ]
}
