{
  "$schema": "https://json.schemastore.org/nodemon",
  "watch": [
    "data/**/*.mdx",
    "config/envs/*.mjs",
    "public/locales/**/*.json",
    "public/locales/**/*.yml",
    ".env",
    ".env.local",
    ".env.test",
    ".env.test.local",
    ".env.development",
    ".env.development.local",
    "*.config.js",
    "next.config.js",
    "postcss.config.js",
    "tailwind.config.js",
    "tailwind.blog.preset.js",
    "tsconfig.json",
    "yarn.lock"
  ],
  "ext": "js,cjs,mjs,json,yml,mdx",
  "ignore": [".git", "node_modules/**/node_modules"],
  "restartable": "rs",
  "verbose": true,
  "env": {}
}
