{
  "$schema": "https://json.schemastore.org/nodemon",
  "watch": [
    "data/**/*.mdx",
    "public/locales/**/*.json",
    "public/locales/**/*.yml",
    ".env",
    ".env.local",
    "next.config.js",
    "postcss.config.js",
    "tailwind.config.js",
    "tsconfig.json",
    "yarn.lock"
  ],
  "ext": "js,json,yml,mdx,lock,.env,.local",
  "ignore": [".git", "node_modules/**/node_modules"],
  "restartable": "rs",
  "verbose": false,
  "env": {}
}
