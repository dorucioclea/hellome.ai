{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "noErrorTruncation": true,
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "#/*": ["./cypress/*"]
    },
    "types": ["node", "jest", "react", "@testing-library/jest-dom"]
  },
  "include": [
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "__tests__",
    "@gen/zod",
    // "@gen/trpc",
    "@types",
    "bin",
    "components",
    "config",
    "data",
    "emails",
    "lib",
    "pages",
    "prisma",
    "server",
    "utils",
    "*.ts",
    "*.js",
    "*.cjs",
    "*.mjs"
  ],
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "@__OLD__",
    "@gen/trpc",
    "@gen/lulu",
    "@gen/crud",
    "cypress",
    "cypress.config.ts"
  ]
}
