# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
# max_line_length = 100

# trailing spaces in markdown indicate word wrap
[*.md]
trim_trailing_whitespace = false

[{*.json,*.md,*.yml,.*rc,.*config}]
indent_style = space
indent_size = 2
