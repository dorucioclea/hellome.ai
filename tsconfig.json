{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "noErrorTruncation": true,
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "#/*": ["./cypress/*"]
    },
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": [
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "node_modules/@replicate/types-openapi/generated/types.d.ts",
    "@types/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.js",
    ".prettierrc.js"
  ],
  "exclude": [
    "node_modules",
    "@__OLD__",
    "@gen/trpc",
    "@gen/lulu",
    "@gen/crud",
    "cypress",
    "cypress.config.ts"
  ]
}
